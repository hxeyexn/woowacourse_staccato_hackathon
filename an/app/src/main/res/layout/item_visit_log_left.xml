<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="visitLog"
            type="woowacourse.shopping.presentation.visitdetail.model.Comment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <FrameLayout
            android:id="@+id/fl_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="19dp"
            android:background="@drawable/card_circle_background"
            android:elevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_profile"
                bindLoadCircleImage="@{visitLog.profileUrl}"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="2dp"
                tools:src="@drawable/icon_bindtee" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{visitLog.name}"
            app:layout_constraintStart_toStartOf="@id/tv_chat"
            app:layout_constraintTop_toTopOf="@id/fl_profile"
            tools:text="username" />

        <TextView
            android:id="@+id/tv_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/word_balloon_left"
            android:padding="12dp"
            android:paddingHorizontal="18dp"
            android:paddingVertical="10dp"
            android:text="@{visitLog.chat}"
            android:textColor="#555555"
            android:textSize="15sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/fl_profile"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:text="캬고오오오오~" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>