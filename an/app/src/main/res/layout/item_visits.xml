<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="visit"
            type="woowacourse.shopping.presentation.traveldetail.model.VisitUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_all_card_4dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_visits_visited_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="4dp"
            android:text="@{visit.visitedAt}"
            android:textColor="#FF3E3E3E"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@id/divider_visits"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="2024. 03. 21" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_visits"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_visits"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_visits_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:text="@{visit.placeName}"
            android:textAppearance="@style/Bold14"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_visits"
            tools:text="장소 이름" />

        <ImageView
            android:id="@+id/iv_visits"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:contentDescription="@string/visits_image_content_description"
            android:scaleType="centerCrop"
            app:roundedCornerImage="@{visit.visitImage}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider_visits"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
